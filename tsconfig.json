{
  "include": [
    "**/*.ts",
  ],
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "nodenext",
    // "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    "noEmit": true
  },
  "ts-node": {
    "esm": true
  }
}